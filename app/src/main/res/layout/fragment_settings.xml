<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/generali"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="100dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/right"
            android:drawablePadding="50dp"
            android:padding="10dp"
            android:text="Generali"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/lingua"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="100dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/right"
            android:drawablePadding="50dp"
            android:padding="10dp"
            android:text="@string/lingua"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/generali" />

        <Button
            android:id="@+id/privacy"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="100dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/right"
            android:drawablePadding="50dp"
            android:padding="10dp"
            android:text="@string/privacy"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lingua" />

        <Button
            android:id="@+id/policy"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="100dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/right"
            android:drawablePadding="50dp"
            android:padding="10dp"
            android:text="@string/policy"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/privacy" />

        <Button
            android:id="@+id/sicurezza"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:textAlignment="textStart"
            android:layout_marginEnd="100dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/right"
            android:drawablePadding="50dp"
            android:padding="10dp"
            android:text="@string/sicurezza"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/policy" />

        <Button
            android:id="@+id/community"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="100dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/right"
            android:drawablePadding="50dp"
            android:padding="10dp"
            android:text="@string/community"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sicurezza" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>