<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AutorizzazioniActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/round_button"
                android:src="@drawable/left_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/linearintern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/internet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:textSize="22dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:paddingRight="70dp"
                    android:drawableRight="@drawable/right"
                    android:text="@string/internet" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linerarposiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/posizione"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:textSize="22dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:paddingRight="70dp"
                    android:drawableRight="@drawable/right"
                    android:text="@string/posizione" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/memoriainter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/memoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:textSize="22dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:paddingRight="70dp"
                    android:drawableRight="@drawable/right"
                    android:text="@string/memoriainterna" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearcalen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/calendario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:textSize="22dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:paddingRight="70dp"
                    android:drawableRight="@drawable/right"
                    android:text="@string/calendario" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearnoti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/notifiche"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:textSize="22dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:paddingRight="70dp"
                    android:drawableRight="@drawable/right"
                    android:text="@string/notifiche" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearaud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/audio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:textSize="22dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:paddingRight="70dp"
                    android:drawableRight="@drawable/right"
                    android:text="@string/audio" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearcontat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/contatti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:textSize="22dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:paddingRight="70dp"
                    android:drawableRight="@drawable/right"
                    android:text="@string/contatti" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/lineararchivisicur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/archiviazionesic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:textSize="22dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:paddingRight="70dp"
                    android:drawableRight="@drawable/right"
                    android:text="@string/archiviazionesicura" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>